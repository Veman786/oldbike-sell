<td class="text-right">
    <div class="btn-group" role="group">

        <form method="post" action="Edit">
            <button type="submit" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model"><i class="fa-solid fa-pen-to-square"></i> &acute;Edit </button>
        </form>
        <form method="post" action="Delete">
            <input onclick="if (!confirm ('Are you sure you want to delete this')) { return false }" type="submit" class="btn btn-danger rounded-0" asp-action="Delete" asp-route-id="@Model" value="Delete" />
        </form>
    </div>
</td>
